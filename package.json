{
  "name": "contextbuddy-standalone",
  "version": "0.1.0",
  "description": "Menu bar companion app for ContextBuddy",
  "main": "dist/main/index.js",
  "author": "Axel Karlsson",
  "license": "MIT",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "clean": "rm -rf dist/mac-arm64 dist/*.dmg dist/*.zip dist/*.blockmap dist/*.yml",
    "dist": "npm run clean && npm run build && electron-builder",
    "dist:mac": "npm run clean && npm run build && electron-builder --mac"
  },
  "dependencies": {},
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "build": {
    "appId": "com.contextbuddy.standalone",
    "productName": "ContextBuddy",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.png",
      "target": ["dmg", "zip"]
    },
    "files": [
      "dist/main/**/*",
      "dist/preload/**/*",
      "dist/renderer/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/"
      }
    ]
  }
}
